{
  "candidateProfile": {
    "description": "Complete data structure for the candidate profile slideout panel",
    "schema": {
      "profileHeader": {
        "description": "Top card with candidate's basic information",
        "fields": {
          "avatar": {
            "type": "string",
            "description": "URL to candidate's avatar image or emoji",
            "example": "https://images.unsplash.com/photo-1507003211169-0a1dd7228f2d?w=400&h=400&fit=crop&crop=faces"
          },
          "name": {
            "type": "string",
            "description": "Full name of the candidate",
            "example": "Steve Harrington"
          },
          "title": {
            "type": "string",
            "description": "Current job title",
            "example": "Staff Software Engineer"
          },
          "company": {
            "type": "string",
            "description": "Current company name",
            "example": "Google"
          },
          "companyLogo": {
            "type": "string",
            "description": "Company logo (emoji or URL)",
            "example": "üî∑"
          },
          "tenure": {
            "type": "string",
            "description": "Length of time at current company",
            "example": "8 year tenure"
          },
          "location": {
            "type": "string",
            "description": "Current location (city, state/country)",
            "example": "San Francisco, CA"
          }
        }
      },
      "workExperience": {
        "description": "Work history with stats and timeline",
        "fields": {
          "stats": {
            "type": "object",
            "description": "Aggregate statistics about work history",
            "properties": {
              "avgTenure": {
                "type": "string",
                "description": "Average tenure across all positions",
                "example": "2.5 years"
              },
              "currentTenure": {
                "type": "string",
                "description": "Time at current position",
                "example": "2.2 years"
              },
              "totalExperience": {
                "type": "string",
                "description": "Total years of professional experience",
                "example": "14 years"
              }
            }
          },
          "positions": {
            "type": "array",
            "description": "List of work positions in reverse chronological order",
            "items": {
              "type": "object",
              "properties": {
                "company": {
                  "type": "string",
                  "description": "Company name",
                  "example": "Google"
                },
                "companyLogo": {
                  "type": "string",
                  "description": "Company logo (emoji or URL)",
                  "example": "üî∑"
                },
                "totalYears": {
                  "type": "string",
                  "description": "Total years at this company (for multi-role companies)",
                  "example": "8 years",
                  "optional": true
                },
                "roles": {
                  "type": "array",
                  "description": "List of roles at this company (can be single or multiple)",
                  "items": {
                    "type": "object",
                    "properties": {
                      "title": {
                        "type": "string",
                        "description": "Job title/role",
                        "example": "Principle Engineer"
                      },
                      "startDate": {
                        "type": "string",
                        "description": "Start date of the role",
                        "example": "Jan 2020"
                      },
                      "endDate": {
                        "type": "string",
                        "description": "End date (or 'Present' if current)",
                        "example": "Present"
                      },
                      "duration": {
                        "type": "string",
                        "description": "Length of time in this role",
                        "example": "2 years"
                      },
                      "location": {
                        "type": "string",
                        "description": "Work location for this role",
                        "example": "San Francisco, CA"
                      },
                      "description": {
                        "type": "string",
                        "description": "Brief description of responsibilities and achievements",
                        "example": "Built, designed, and shipped complex products on a global scale."
                      }
                    }
                  }
                },
                "isMultiRole": {
                  "type": "boolean",
                  "description": "Whether the candidate held multiple roles at this company",
                  "example": true
                }
              }
            }
          }
        }
      },
      "education": {
        "description": "Educational background",
        "fields": {
          "degrees": {
            "type": "array",
            "description": "List of degrees in reverse chronological order",
            "items": {
              "type": "object",
              "properties": {
                "degree": {
                  "type": "string",
                  "description": "Degree type (PhD, MS, BA, BS, etc.)",
                  "example": "PhD"
                },
                "field": {
                  "type": "string",
                  "description": "Field of study",
                  "example": "Computer Science"
                },
                "school": {
                  "type": "string",
                  "description": "Institution name",
                  "example": "Yale"
                },
                "startYear": {
                  "type": "string",
                  "description": "Start year or date",
                  "example": "Jan 2010"
                },
                "endYear": {
                  "type": "string",
                  "description": "End year or date",
                  "example": "Jan 2012"
                },
                "duration": {
                  "type": "string",
                  "description": "Length of program",
                  "example": "2 years"
                },
                "icon": {
                  "type": "string",
                  "description": "Icon for the degree (emoji or URL)",
                  "example": "üéì"
                }
              }
            }
          }
        }
      }
    }
  },
